      allow write: if request.auth != null && request.auth.token.email in [
        'kps.kispl@gmail.com',
        'qa.admin@gmail.com',
    'rishabh@gmail.com'
      ];
    }
    
    match /matches/{matchId}/commentary/{inningDoc=**} {
  allow read: if request.auth != null;
