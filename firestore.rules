rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  
  match /matches/{matchId}/innings/{inningNum} {
  allow list: if request.auth != null;    // ADD THIS
  allow read: if request.auth != null;
  allow write: if request.auth != null && request.auth.token.email in [
    'kps.kispl@gmail.com',
    'qa.admin@gmail.com',
    'rishabh@gmail.com'
  ];
}

match /matches/{matchId}/innings/{inningNum}/overs/{overNum} {
  allow list: if request.auth != null;   // ADD THIS
  allow read: if request.auth != null;
  allow write: if request.auth != null && request.auth.token.email in [
    'kps.kispl@gmail.com',
    'qa.admin@gmail.com',
    'rishabh@gmail.com'
  ];
}

match /matches/{matchId}/innings/{inningNum}/overs/{overNum}/balls/{ballId} {
  allow list: if request.auth != null;   // ADD THIS
